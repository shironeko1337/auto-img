{
  "name": "@shironeko1052/autoimg",
  "version": "0.1.1",
  "description": "Web component for content-aware image resizing and focusing",
  "author": "Liyi Zhang",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:shironeko1337/auto-img.git",
    "directory": "packages/webcomponent"
  },
  "homepage": "https://github.com/shironeko1337/auto-img",
  "bugs": {
    "url": "https://github.com/shironeko1337/auto-img/issues"
  },
  "keywords": [
    "web-component",
    "custom-element",
    "image",
    "responsive",
    "focus",
    "crop",
    "auto-img",
    "content-aware"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "customElements": "custom-elements.json",
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts src/auto-img-element.define.ts --format esm,cjs,iife --dts",
    "build:prod": "tsup src/index.ts src/auto-img-element.define.ts --format esm,cjs,iife --dts --minify --clean",
    "dev": "tsup src/index.ts src/auto-img-element.define.ts --format esm,cjs,iife --dts --watch",
    "build:demo": "tsup src/index.ts src/auto-img-element.define.ts --format esm,cjs,iife --dts",
    "demo": "npm run build:demo && npx serve .",
    "demo:watch": "tsup src/index.ts src/auto-img-element.define.ts --format esm,cjs,iife --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@shironeko1052/autoimg-core": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.0.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^25.0.0",
    "vitest": "^2.0.0"
  }
}
