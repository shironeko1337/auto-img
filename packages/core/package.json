{
  "name": "autoimg-core",
  "version": "0.1.0",
  "description": "Core library for resizing and shifting images to keep content focused",
  "author": "Liyi Zhang",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:shironeko1337/auto-img.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/shironeko1337/auto-img",
  "bugs": {
    "url": "https://github.com/shironeko1337/auto-img/issues"
  },
  "keywords": [
    "image",
    "responsive",
    "focus",
    "crop",
    "resize",
    "background-image",
    "content-aware",
    "image-processing"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./api": {
      "types": "./dist/index.api.d.ts",
      "import": "./dist/index.api.js",
      "require": "./dist/index.api.cjs"
    }
  },
  "sideEffects": [
    "./dist/index.api.js",
    "./dist/index.api.cjs"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts src/index.api.ts --format esm,cjs --dts",
    "build:prod": "tsup src/index.ts src/index.api.ts --format esm,cjs --dts --minify --clean",
    "build:watch": "tsup src/index.ts src/index.api.ts --format esm,cjs --dts --watch",
    "visualize:build": "tsup --config tsup.visualize.config.ts",
    "visualize:roi": "npm run visualize:build && start visualizer_roi.html",
    "visualize:upscale": "npm run visualize:build && start visualizer_upscale.html",
    "test": "vitest run",
    "test:update": "vitest run -u",
    "test:watch": "vitest",
    "test:debug": "cross-env DEBUG=1 vitest --browser.headless=false",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.56.1",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "cross-env": "^10.1.0",
    "esbuild": "^0.24.0",
    "playwright": "^1.56.1",
    "tsup": "^8.0.0",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.0.0"
  }
}
