{
  "name": "@shironeko1052/autoimg-demo",
  "version": "1.0.0",
  "description": "Demo application for AutoImg library",
  "author": "Liyi Zhang",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shironeko1337/auto-img.git",
    "directory": "packages/demo"
  },
  "homepage": "https://github.com/shironeko1337/auto-img",
  "bugs": {
    "url": "https://github.com/shironeko1337/auto-img/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "index.html",
    "playground-init.js",
    "README.md"
  ],
  "scripts": {
    "build:js": "tsup",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/styles.css",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "tsup --watch",
    "watch:css": "tailwindcss -i ./styles.css -o ./dist/styles.css --watch",
    "build:watch": "concurrently \"npm:watch:js\" \"npm:watch:css\"",
    "dev": "concurrently \"npm:build\" \"npm:watch:js\" \"npm:watch:css\" \"npx live-server --port=3000 --watch=dist,index.html,playground-init.js --open\"",
    "demo": "npm run build && npx serve .",
    "demo:watch": "npm run build:watch"
  },
  "dependencies": {
    "@shironeko1052/autoimg-core": "^0.1.0",
    "@shironeko1052/autoimg": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "live-server": "^1.2.2",
    "marked": "^17.0.1",
    "tailwindcss": "^4.1.17"
  }
}
